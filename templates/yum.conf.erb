[main]
<% if @proxy != nil -%>
proxy=<%= @proxy %>
<% end -%>
<% if @distroverpkg_bool == true -%>
distroverpkg=<%= @operatingsystem.downcase %>-release
<% end -%>
<% if @pkgpolicy != nil -%>
pkgpolicy=<%= @pkgpolicy %>
<% end -%>
<% if @installonly_limit_int != nil -%>
installonly_limit=<%= @installonly_limit_int %>
<% end -%>
cachedir=/var/cache/yum/$basearch/$releasever
keepcache=0
debuglevel=2
logfile=/var/log/yum.log
tolerant=1
exactarch=1
obsoletes=1
gpgcheck=1
plugins=1
<% if @exclude_array_real != nil -%>
exclude=<%= @exclude_array_real.join(' ') %>
<%   end -%>

# Note: yum-RHN-plugin doesn't honor this.
metadata_expire=1h
